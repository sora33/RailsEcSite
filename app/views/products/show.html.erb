 <!-- Product section-->
<%= link_to '編集', edit_product_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', @product, method: :delete, data: {comfirm: "商品#{@product.name}を削除します、よろしいですか？"}, class: 'btn btn-danger' %>


<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                <% if !@product.images.present? %>
                  <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." />
                <% end %>
                <% @product.images.each do |image| %>
                  <%= image_tag(image.variant(resize_to_fill: [600, 700]).processed, class: "card-img-top mb-5 mb-md-0") %>
                <% end %>
                </div>

                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder"><%= @product.name %></h1>
                    <div class="fs-5 mb-5">
                        <span><%= number_to_currency(@product.price) %></span>
                    </div>
                    <p class="lead"><%= @product.description %></p>
                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="button">
                            <i class="bi-cart-fill me-1"></i>
                            カートに入れる
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Related items section-->
    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4">関連の商品</h2>
            <%= render partial: 'products', locals: {products: @products} %>
        </div>
    </section>
  </div>
</section>
